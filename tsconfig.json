{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["**/src/**/*", "**/test/**/*.*.ts"]
}
